<!-- index.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo App</title>
    <link rel="stylesheet" type="text/css" href="/styles/style.css"> <!-- Link to your CSS file -->
</head>

<body>
    <% include("./partials/header") %>
    <nav class="navbar navbar-light bg-light">
        <H1 class="navbar-brand">Todo App</H1>
        <h5 class="abhi">Made by Abhinav</h5>
      
    </nav>

    <div class="container mt-5">
        <img src="abh.gif" class="abh"alt="a">
        <form action="/add/todo" method="POST" class="d-flex">
            <input type="text" name="todo" class="form-control" placeholder="Enter Todo">
            <input type="submit" value="Add Todo" class="btn btn-md btn-primary mx-2">
        </form>


        <ul class="list-group my-5">
            <% todo.forEach(todos => { %>
            <li class="list-group-item"><%= todos.todo %> <a href="/delete/todo/<%= todos._id %>"
                    class="btn btn-danger btn-sm">Delete</a></li>

            <% }) %>

        </ul>
    </div>

    <% include("./partials/footer") %>
</body>

</html>
